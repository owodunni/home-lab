---
extends: default
rules:
  line-length:
    max: 140
    level: error
  truthy: false
  comments:
    min-spaces-from-content: 1
  comments-indentation: false
  braces:
    max-spaces-inside: 1
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  **/.github/workflows/ci.yml
  **/stale.yml
  .venv/
  uv.lock
  .ansible/
  **/vault.yml
